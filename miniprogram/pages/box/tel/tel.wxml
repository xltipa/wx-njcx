<!--pages/tel/departmentTel.wxml-->
<!-- 学校各系部电话号码通讯录专页 -->
<view class="remind-box" wx:if="{{isLoading}}">
  <!-- <image class="remind-img" src="/images/loading.gif"></image> -->
</view>
<view class="page" wx:else>
  <view class="page__hd">
    <view class="page__title">各系部联系电话</view>
    <view class="page__desc" style='color:#000;'>
      <text>学校各系、各部门办公联系电话\n\r点击号码可以直接拨打，长按号码复制到粘贴版</text>
    </view>
  </view>

  <view class="ykt-detail-wraper">
    <view class="detail-list" wx:for="{{telNumber}}" wx:key="telList">
      <view class="detail-item">
        <text class="detail-item-label">{{item.name}}</text>
        <text class="detail-item-value" id='{{item.tel}}' bindtap='callPhone' bindlongpress="copyIt">{{item.tel}}</text>
      </view>
    </view>
    <view class="weui-cells__tips">外地用户请加拨南京长途区号 025</view>
  </view>
  <button open-type="contact" class="login-btn">
    <text>我要补充</text>
  </button>
  <button open-type="share" class="login-btn">
    <text>分享学校通讯录给同学</text>
  </button>
  <!-- 广告位 -->
  <view class='ads'>
    <ad unit-id="adunit-62f52651dd5f4ff6"></ad>
  </view>
  <!-- 广告位结束 -->
  <view class="weui-footer">
    <view class="weui-footer__links">
      <navigator url="/pages/features/about" class="weui-footer__link">Airmole.</navigator>
    </view>
    <view class="weui-footer__text">Copyright © 2020 南财全能墙</view>
  </view>
</view>